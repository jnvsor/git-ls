#    along with this program.  If not, see <http://www.gnu.org/licenses/>.


usage(){
    echo 'Usage: git ls [-h | --help] [-b | --batch | -c | --color] [-a | --all] [[--] directory]'
}


dotfiles=0
colors=1
formatting=1

while :
do
    case "$1" in
    --help|-h)
        usage
        exit 0
        ;;

    -a|-A|-all)
        shift
        dotfiles=1
        ;;

    -c|-C|--color)
        shift
        colors=0
        ;;

    -b|-B|--batch)
        shift
        formatting=0
        colors=0
        ;;

    --)
        shift
        break
        ;;

    *)
        break
        ;;
    esac
done

if [ "$#" -ne 0 ]
then
    if [ ! -d "$1" ]
    then
        usage
        exit 1
    fi
    cd "$1"
fi

if ! git rev-parse --is-inside-work-tree > /dev/null 2>&1
then
    git rev-parse --is-inside-work-tree
    exit 1
fi


if [ "$colors" -eq 1 ]
then
    cStaged=$'\e[0;32m'
    cUntracked=$'\e[0;31m'
    cIgnored=$'\e[0;37m'
    cHash=$'\e[0;33m'
    cReset=$'\e[0m'
fi


if [ "$dotfiles" -eq 1 ]
then
    file_length="$(ls -A | awk '{ if (length($0) > max) max = length($0) } END { print max }')"
    shopt -s dotglob
else
    file_length="$(ls | awk '{ if (length($0) > max) max = length($0) } END { print max }')"
fi

if [ -z "$file_length" ]
then
    exit 0
fi

comitted="$(git ls-tree --name-only HEAD)"

for file in *
do
    if [ "$file" = ".git" ]
    then
        continue
    fi

    if [ "$formatting" -eq 0 ]
    then
        echo -ne "$file\t"
    else
        printf "%-${file_length}s\t" "$file"
    fi

    status="$(git status --porcelain "$file")"

    if echo "$comitted" | grep -Fxq "$file"
    then
        if echo "$status" | grep -q "^[AM]"
        then
            status="$cStaged"
        elif [[ "$status" == " M"* ]]
        then
            status="$cUntracked"
        else
            status=""
        fi

        log="$(git log -1 --pretty="format:%cr"$'\t'"%H"$'\t'"%s" -- "$file")"

        if [ "$formatting" -eq 0 ]
        then
            echo "$log"
        else
            awk -v gitlog="$log" -v status="$status" 'BEGIN {
                tab = index(gitlog, "\t");
                time = substr(gitlog, 0, tab - 1);
                hash = substr(gitlog, tab + 1, 40);
                message = substr(gitlog, tab + 42);

                printf "%s%-8.15s'"$cReset"'\t'"$cHash"'%.7s'"$cReset"'\t%s\n", status, time, hash, message
            }'
        fi
    else
        if git check-ignore "$file" > /dev/null
        then
            echo -e "${cIgnored}Gitignored$cReset"
        elif [[ "$status" == "??"* ]]
        then
            echo -e "${cUntracked}Untracked$cReset"
        elif [[ "$status" == "A"* ]]
        then
            echo -e "${cStaged}Staged$cReset"
        elif [ -z "$status" ]
        then
            if [ -z "$(ls -A "$file")" ]
            then
                echo "Empty"
            else
                echo -e "${cIgnored}Gitignored$cReset"
            fi
        fi
    fi
done
